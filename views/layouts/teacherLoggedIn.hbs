        .plusIcon{
            border-radius: 100%;
            padding: 10px;
        }
        .plusIcon:hover{
            background-color: rgba(0, 0, 0, 0.384);
            box-shadow: 0px 0px 10px 2px rgba(0, 0, 0, 0.285);
        }
