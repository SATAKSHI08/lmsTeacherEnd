</head>
<body>
    <div class="header">
        <img src="http://old.iitbhu.ac.in/icmc2018/apm/images/IITBHU-Logo.jpg" alt="iit_bhu_logo" class="teacher_heading_logo_img"/>
        <h3 class="heading_logo_text">IIT BHU</h3>
        <a href="/teacherDashboard/create" class="addClassIcon">
        <img src="https://www.downloadclipart.net/large/plus-transparent-png.png" class="plusIcon" name="submit" width="31" height="35" alt="plus"/>
        </a>
        
        <input type="image" id='image' src="#" class="plusIcon" name="submit" width="31" height="35" alt="submit"/>  
        <h3 class="login_icon">üëç</h3>
    </div>
    <script>
        // %3A - :
        // %2F - /
        // %3D - =

        let imageLink = document.cookie.split(';')[6].split('=')[1];
        imageLink = imageLink.replaceAll("%3A", ":");
        imageLink = imageLink.replaceAll("%2F", "/");
        imageLink = imageLink.replaceAll("%3D", "=");

        const image = document.getElementById('image');
        image.src = imageLink;
        console.log(imageLink);
        
    </script>
