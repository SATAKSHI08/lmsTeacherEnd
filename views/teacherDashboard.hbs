<h3>All Classes will appear in card form...</h3>
<style>
    .card{
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        transition: 0.3s;
        border-radius: 5px;
        margin: 10px;
        text-align: center;
        width: 250px;
        font-family: sans-serif;
    }
    .data{
        padding: 2px;
    }
    .box{
        display: flex;
    }
    img {
        border-radius: 50px;
        margin-top: 10px;
    }
    .upperPart{
        background-color: rgb(136, 156, 65);
        color: black;
        border-radius: 5px;
    }
    .lowerPart{
        padding: 30px;
    }
</style>
<div class="box">
{{#each allClasses}}

    <div class="card">
        <div class="upperPart">
            <div class="data">{{this.classCode}}</div>
            <div class="data">{{this.className}}</div>
            <div class="data">{{this.classTeacher}}</div>
        
        </div>
        <div class="lowerPart">
            <div class="data">{{this.classDescription}}</div>
            {{!-- <div class="data">{{this.classTeacherId}}</div> --}}
            <div class="data">
                <img src="{{this.classTeacherImage}}" alt="Prof ki photo">
            </div>
        </div>
        
        <br><br>
    </div>
{{/each}}
</div>